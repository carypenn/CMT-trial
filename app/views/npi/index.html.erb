<h1>NPI Lookup</h1>
<p>
  <form action="http://localhost:3000/npi/show" method="get">
    <input name="id" placeholder="Enter NPI Number"/>
    <button type="submit">Search</button>
  </form>
</p>
<table style="padding: 20px;border-radius: 20px;border: 1px solid black;">
  <tr>
    <th>NPI #</th>
    <th>Name</th>
    <th>Type</th>
    <th>Taxonomy</th>
    <th>Address</th>
  </tr>
  <% @records.each do |record| %>
  <tr>
    <td style="padding: 10px;"> <%= record.number %> </td>
    <td style="padding: 10px;"> <%= record.name %> </td>
    <td style="padding: 10px;"> <%= record.type %> </td>
    <td style="padding: 10px;"> <%= record.taxonomy %> </td>
    <td style="padding: 10px;"> <%= record.address %> </td>
  </tr>
  <% end %>
</table>
